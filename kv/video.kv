#:kivy 1.4
<Screen2@Screen>:
    name: 'video'
    GridLayout:
        spacing:10
        pos: 228,280
        size_hint: 0.2, 0.4
        orientation: 'vertical'
        cols: 1
        Button:
            text: "VIDEO SETTINGS"
            background_color: .7, .7, 1, 1
            font_size: 18
        ToggleButton:
            text: "Inputs"
            group: "setting"
            on_press:app.set_video_inputs()
        ToggleButton:
            text: "Outpus"
            group: "setting"
            on_press:app.get_video_outputs()
        ToggleButton:
            text: "Groups"
            group: "setting"
